@model IEnumerable<DiplomStore.Domain.Entity.AppUser>
@{Layout="_Layout";}
<div class="bg-primary m-1 р-1 text-white"><h4>Пользователи</h4></div>
    <table class="table table-bordered">
    <thead>
        <tr>
        
        <th scope="col">Имя пользователя</th>        
   
        </tr>        
    </thead>
    <tbody>
        @if(Model.Count()==0 )
        {
            <tr><td colspan="2" class="text-center">Нету данных</td></tr>
        }
        else
        {
            @foreach (var c in Model)
        {
                <tr>
                    
                    <td>@c.Email</td>
                    
                    
                    <td>
                        <form method="post" asp-action="DeleteUser" asp-route-id="@c.Id">                            
                            <button class="btn btn-sm btn-danger" type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        }                   
    </tbody>
</table>
<a class="btn btn-primary" asp-action="CreateTovar">Создать</a>
<a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Назад</a>
