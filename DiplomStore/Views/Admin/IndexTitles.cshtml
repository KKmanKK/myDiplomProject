@model IEnumerable<TitleViewModel>
@{Layout="_Layout";}
<div class="bg-primary m-1 р-1 text-white"><h4>Тайтлы</h4></div>
    <table class="table table-bordered">
    <thead>
        <tr>
        <th scope="col">Назвакние</th>
        <th scope="col">Популярный?</th>
        <th scope="col">Товары</th>       
        </tr>        
    </thead>
    <tbody>
        @if(Model.Count()==0 )
        {
            <tr><td colspan="3" class="text-center">Нету данных</td></tr>
        }
        else
        {
            @foreach(var c in Model)
            {
                <tr>
                    <td>@c.name</td>
                    <td>@c.isPopular</td>                  
                    <td><a class="btn btn-primary" asp-action="ListProject" asp-route-id="@c.TitlesId">Товары</a></td>
                    <td>
                        <form method="post" asp-action="DeleteTitle" asp-route-id="@c.TitlesId">
                            <a asp-action="EditTitle" asp-route-id="@c.TitlesId" class="btn btn-sm btn-secondary">Изменить</a>
                            <button class="btn btn-sm btn-danger" type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        }                   
    </tbody>
</table>
<a class="btn btn-primary" asp-action="CreateTitle">Создать</a>
<a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Назад</a>
