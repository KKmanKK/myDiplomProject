@model IEnumerable<CategoryViewModel>
@{Layout="_Layout";}
<div class="bg-primary m-1 р-1 text-white"><h4>Категории</h4></div>
    <table class="table table-bordered">
    <thead>
        <tr>
        <th scope="col">Название</th>
        <th scope="col">Название изображения</th>    
        <th scope="col">Популярный?</th>
        <th scope="col">Товары</th>        
        </tr>        
    </thead>
    <tbody>
        @if(Model.Count()==0 )
        {
            <tr><td colspan="4" class="text-center">Нету данных</td></tr>
        }
        else
        {
            @foreach(var c in Model)
            {
                <tr>                    
                    <td>@c.name</td>
                    <td>@c.NameImg</td>
                    <td>@c.IsPopular</td>
                    <td><a class="btn btn-primary" asp-action="ListCategoryTovars" asp-route-id="@c.CategoriesId">Товары</a></td>
                    <td>
                        <form method="post" asp-action="DeleteCategory" asp-route-id="@c.CategoriesId">
                            <a asp-action="EditCategory" asp-route-id="@c.CategoriesId" class="btn btn-sm btn-secondary">Изменить</a>
                            <button class="btn btn-sm btn-danger" type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        }                   
    </tbody>
</table>
<a class="btn btn-primary" asp-action="CreateCategory">Создать</a>
<a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Назад</a>
